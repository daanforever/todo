<%- model_class = Task -%>
<table class="table">
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td width="60%" class="<%= task.color ? task.color.name : "defaultColor" %>"><%= link_to truncate(task.text, :length => 50), task_path(task) %></td>
        <td width="20%"><%= task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td width="20%">
          <%= link_to '',
                            task_up_path(task), 
                            :remote => true,
                            :class => 'btn btn-mini icon-arrow-up' %>
          <%= link_to '',
                            task_down_path(task), 
                            :remote => true,
                            :class => 'btn btn-mini icon-arrow-down' %>
          <%= link_to '',
                      edit_task_path(task), :class => 'btn btn-mini btn-info icon-edit' %>
          <%= link_to '',
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger icon-remove' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
